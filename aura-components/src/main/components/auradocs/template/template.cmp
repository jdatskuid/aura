<aura:component isTemplate="true" extensible="true" extends="aura:template" style="templateCss://auradocs.template">
    <aura:set attribute="extraStyleTags">
        <link rel="stylesheet" href="/auraFW/resources/codemirror/lib/codemirror.css"></link>
    </aura:set>
    <aura:set attribute="extraScriptTags">
        <script src="/auraFW/resources/codemirror/lib/codemirror.js"></script>
        <script src="/auraFW/resources/codemirror/addon/display/autorefresh.js"></script>
        <script src="/auraFW/resources/codemirror/mode/clike/clike.js"></script>
        <script src="/auraFW/resources/codemirror/mode/css/css.js"></script>
        <script src="/auraFW/resources/codemirror/mode/htmlmixed/htmlmixed.js"></script>
        <script src="/auraFW/resources/codemirror/mode/javascript/javascript.js"></script>
        <script src="/auraFW/resources/codemirror/mode/xml/xml.js"></script>
    </aura:set>
    <aura:set attribute="title" value="Aura Documentation"/>
    
    <aura:set attribute="extraMetaTags">
		<meta name="description" content="Aura is a UI framework for developing dynamic web apps for mobile and desktop devices. It comes with a rich and extensible component set to kick start building apps." />
	</aura:set>

    <aura:set attribute="auraPreInitBlock">
        <auraStorage:init name="actions" maxSize="4096" defaultExpiration="3600" secure="true" persistent="false"
            defaultAutoRefreshInterval="3600" debugLoggingEnabled="true" clearStorageOnInit="false"/>

        if($A.util.isIE) {
            //Custom override for IE11.  IE11's implentation of popState/pushState
            //is different to other browsers.
            window.history.pushState = undefined;
        }
    </aura:set>
</aura:component>
